<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx"  minWidth="955" minHeight="600" xmlns:local="*" xmlns:components="flatspark.components.*">
	<fx:Script>
		<![CDATA[
			import flatspark.enums.BrandColorEnum;
			import flatspark.utils.AwesomeUtils;
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<s:Callout id="demoCallout" skinClass="CalloutFlatSkin" width="300" height="300"
				   horizontalPosition="middle" verticalPosition="after" mouseDownOutside="demoCallout.close()" creationPolicy="all"
				   contentBackgroundAppearance="none" borderThickness="0" borderColor="0xFFFFFF">
			<local:CalloutContent width="100%" height="100%"/>
		</s:Callout>
	</fx:Declarations>
	
	<components:ButtonIcon id="btn" label="Click to callout a smile" iconFont="{AwesomeUtils.fa_smile_o}" brand="{BrandColorEnum.Success}"
						   click="{demoCallout.open(btn)}" horizontalCenter="0" verticalCenter="0" />
</s:Application>
